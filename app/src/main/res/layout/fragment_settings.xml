<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingsFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsClearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/delete_password_button_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:text="@string/clear_all_passwords"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/delete_button_ripple" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/importButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/settings_button_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:text="@string/_import"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsClearButton"
        app:rippleColor="@color/settings_button_ripple" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/settings_button_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:text="@string/export"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/importButton"
        app:rippleColor="@color/settings_button_ripple" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/regenerateMasterPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/settings_button_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:text="@string/regenerate_master_password"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/exportButton"
        app:rippleColor="@color/settings_button_ripple" />
</androidx.constraintlayout.widget.ConstraintLayout>